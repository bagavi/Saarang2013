<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:keepScreenOn="true"
  >
  <view
    class="com.utils.MapUpMapDisplay"
    android:id="@+id/mapDisplay"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1"
   />
  <ImageButton
    android:id="@+id/zoomOut"
    android:layout_alignBottom="@id/mapDisplay"
    android:layout_alignLeft="@id/mapDisplay"
    android:layout_margin="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/zoomout"
    android:background="#00000000"
    />
  <ImageButton
    android:id="@+id/zoomIn"
    android:layout_alignBottom="@id/mapDisplay"
    android:layout_alignRight="@id/mapDisplay"
    android:layout_margin="15dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/zoomin"
    android:background="#00000000"
    />
  <ImageButton 
   	android:id="@+id/testBtn1"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/pin"
	android:scaleType="fitXY"
	android:background="@null" 
   />
  <ImageButton 
   	android:id="@+id/testBtn2"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/pin"
	android:scaleType="fitXY"
	android:background="@null" 
   />
  <ImageButton 
   	android:id="@+id/testBtn3"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/pin"
	android:scaleType="fitXY"
	android:background="@null"
   />

</RelativeLayout>
